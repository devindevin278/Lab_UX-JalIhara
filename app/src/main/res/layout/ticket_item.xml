<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="0dp"
    app:cardCornerRadius="25dp"
    android:layout_gravity="center_horizontal">

    <!-- Add padding to create space between text and card edges -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/ticketImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ticket_1"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_card_background"/>

        <!-- Your ticket item layout content here -->
        <!-- For example, use TextViews to display ticket name and price -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:alpha="0.25"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/ticketNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="ticket 1"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_marginBottom="125dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/ticketDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:text="18 July 2023 at International Stadium Jakarta"
            android:layout_gravity="bottom"
            android:layout_marginBottom="95dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom" />



        <TextView
            android:id="@+id/ticketPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="$10.99"
            android:textSize="22sp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/buyBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-5dp"
            android:backgroundTint="@color/buyBtn"
            android:text="BUY TICKET" />
    </FrameLayout>

</androidx.cardview.widget.CardView>

